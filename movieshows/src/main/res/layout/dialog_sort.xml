<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/dialog_sort"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#0D795548"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="24dp"
        app:srcCompat="@drawable/ic_close_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/uniform_margin"
            android:background="@drawable/btn_bg"
            android:text="@string/txt_popular"
            android:padding="@dimen/uniform_margin"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/uniform_margin"
            android:padding="@dimen/uniform_margin"
            android:background="@drawable/btn_bg"
            android:text="@string/txt_now_playing"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnUpcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/uniform_margin"
            android:layout_margin="@dimen/uniform_margin"
            android:background="@drawable/btn_bg"
            android:text="@string/txt_upcoming"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnTopRated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/uniform_margin"
            android:layout_margin="@dimen/uniform_margin"
            android:background="@drawable/btn_bg"
            android:text="@string/txt_top_rated"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>